{% extends "_base.twig" %}
{% block title %} {{ title }} {% endblock %}
{% block content %}
<div class="container">
    {% if loggedIn == false %}
    {% include "sidebar.twig" %}
    {% endif %}
    <div class="row mb-3">
        <div class="col">
            <h2 class="display-3">Home</h2>
            <div class="card border-dark">
                <div class="card-body p-0">
                    <table class="table mb-0">
                        <thead class="card-header bg-dark text-light">
                        <th>
                            CATEGORY
                        </th>
                        <th>
                            TOPICS
                        </th>
                        <th>
                            LAST TOPIC
                        </th>
                        </thead>
                        <tbody>
                        {% for categoryTableRow in categoryTableRows %}
                        {% include "categoryTableRow.twig" %}
                        {% endfor %}
                        </tbody>
                    </table>
                    <!-- /.table -->
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card border-primary -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</div>

<!-- /.container -->
{% endblock content %}